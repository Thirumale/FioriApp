<mvc:View 
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="BasicFiori-Routing.controller.InvoiceList">
	<List 
        id="invoiceList"
		headerText="{i18n>customerListTitle}"
		class="sapUiResponsiveMargin MyCustomersList"
		width="auto"
        items="{
         path : 'customer>/Customers',
         sorter : {
            path : 'ContactTitle',
            group : true
         }
        }" >
        <headerToolbar>
         <Toolbar>
            <Title text="{i18n>customerListTitle}"/>
            <ToolbarSpacer/>
            <SearchField width="50%" search="onFilterInvoices" selectOnFocus="false"/>
         </Toolbar>
      </headerToolbar>

		<items>
			<ObjectListItem
                    class="MyCustomersList"
					title="{customer>Id} - {customer>ContactName} - {customer>Country}"
					type="Navigation"
					press="onPress">
			</ObjectListItem>
		</items>
	</List>
</mvc:View>